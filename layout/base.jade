doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    include _partial/head
  body(class=bodyclass)
    div.container
      div#page_head
        block header
          a(href=config.root)
            img(src="/images/logo-frisby.png")
      div.row
        nav#topnav.navbar.navbar-default(role='navigation')
          ul.nav.navbar-nav
            li
              a(href=config.root) Home
            li
              a(href='/docs') Documentation

      section#page_content
        block content
      footer#page_foot
        include _partial/footer
